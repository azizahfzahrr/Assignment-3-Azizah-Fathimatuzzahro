<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".presentation.view.menu.PreferencesActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/travel_preferences"
        android:fontFamily="@font/poppins_bold"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tell_us_your_travel_preferences_and_we_ll_tailor_recommendation_to_your_style_don_t_worry_you_can_always_change_it_later_in_the_settings"
        android:textSize="14sp"
        android:textColor="#B0B0B0"
        android:gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:chipSpacingHorizontal="8dp"
        app:chipSpacingVertical="8dp"
        app:singleSelection="true"
        >

        <com.google.android.material.chip.Chip
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/chip_beaches"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:text="Option 1"
            android:fontFamily="@font/poppins"
            app:chipBackgroundColor="@color/background_secondary"
            app:chipStrokeColor="@android:color/black"
            app:chipStrokeWidth="1dp"
            android:textColor="@color/black"
            app:checkedIconVisible="false"
            app:rippleColor="?attr/colorControlHighlight" />

        <com.google.android.material.chip.Chip
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/chip_mountains"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:text="Option 2"
            android:fontFamily="@font/poppins"
            app:chipBackgroundColor="@color/background_secondary"
            app:chipStrokeColor="@android:color/black"
            app:chipStrokeWidth="1dp"
            android:textColor="@android:color/black"
            app:checkedIconVisible="false"
            app:rippleColor="?attr/colorControlHighlight" />

        <com.google.android.material.chip.Chip
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/chip_road_trip"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:text="Option 3"
            android:fontFamily="@font/poppins"
            app:chipBackgroundColor="@color/background_secondary"
            app:chipStrokeColor="@android:color/black"
            app:chipStrokeWidth="1dp"
            android:textColor="@android:color/black"
            app:checkedIconVisible="false"
            app:rippleColor="?attr/colorControlHighlight" />

        <com.google.android.material.chip.Chip
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/chip_camping"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:text="Option 4"
            android:fontFamily="@font/poppins"
            app:chipBackgroundColor="@color/background_secondary"
            app:chipStrokeColor="@android:color/black"
            app:chipStrokeWidth="1dp"
            android:textColor="@android:color/black"
            app:checkedIconVisible="false"
            app:rippleColor="?attr/colorControlHighlight" />

        <com.google.android.material.chip.Chip
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/chip_art_galleries"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:text="Option 5"
            android:fontFamily="@font/poppins"
            app:chipBackgroundColor="@color/background_secondary"
            app:chipStrokeColor="@android:color/black"
            app:chipStrokeWidth="1dp"
            android:textColor="@android:color/black"
            app:checkedIconVisible="false"
            app:rippleColor="?attr/colorControlHighlight" />

        <com.google.android.material.chip.Chip
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/chip_skiing"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:text="Option 6"
            android:fontFamily="@font/poppins"
            app:chipBackgroundColor="@color/background_secondary"
            app:chipStrokeColor="@android:color/black"
            app:chipStrokeWidth="1dp"
            android:textColor="@android:color/black"
            app:checkedIconVisible="false"
            app:rippleColor="?attr/colorControlHighlight" />

        <com.google.android.material.chip.Chip
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/chip_staycations"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:text="Option 7"
            android:fontFamily="@font/poppins"
            app:chipBackgroundColor="@color/background_secondary"
            app:chipStrokeColor="@android:color/black"
            app:chipStrokeWidth="1dp"
            android:textColor="@android:color/black"
            app:checkedIconVisible="false"
            app:rippleColor="?attr/colorControlHighlight" />

        <com.google.android.material.chip.Chip
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/chip_food_tourism"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:text="Option 8"
            android:fontFamily="@font/poppins"
            app:chipBackgroundColor="@color/background_secondary"
            app:chipStrokeColor="@android:color/black"
            app:chipStrokeWidth="1dp"
            android:textColor="@android:color/black"
            app:checkedIconVisible="false"
            app:rippleColor="?attr/colorControlHighlight" />

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_continue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Continue"
        app:cornerRadius="14dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/background"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/chip_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
